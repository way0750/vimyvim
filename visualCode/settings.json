{
    "workbench.colorTheme": "Monokai",
    "editor.lineNumbers": "relative",
    "vim.easymotion": true,
    "vim.leader": "<space>",
    "vim.otherModesKeyBindingsNonRecursive": [
      {
        "before": ["<leader>", "o"],
        "after": ["<leader>", "<leader>", "s"],
      }
    ],
    "vim.insertModeKeyBindings": [
       {
           "before": ["j", "k"],
           "after": ["<Esc>"]
       }
  ]
}